<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/skillTreeContainer"
    android:background="@color/silver"
    tools:context="skillfiles.SkillTreeMenuFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/levelData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:textColor="@color/white"
        android:text="Level: \nXP Points to Spend: "
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/exitMenuButton"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:text="X"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/s0"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="1"
        android:textColor="@color/maroon"
        android:textSize="12sp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp" />

    <Button
        android:id="@+id/s1"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="2"
        android:textColor="@color/maroon"
        android:textSize="12sp"
        app:layout_constraintLeft_toRightOf="@+id/s0"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/s2"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="3"
        android:textColor="@color/maroon"
        android:textSize="12sp"
        app:layout_constraintLeft_toRightOf="@+id/s1"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/s3"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="4"
        android:textColor="@color/maroon"
        android:textSize="12sp"
        app:layout_constraintLeft_toRightOf="@+id/s2"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.306" />

    <Button
        android:id="@+id/s4"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="5"
        android:textColor="@color/maroon"
        android:textSize="12sp"
        app:layout_constraintLeft_toRightOf="@+id/s3"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.306" />

    <Button
        android:id="@+id/s5"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="6"
        android:textColor="@color/maroon"
        android:textSize="12sp"
        app:layout_constraintLeft_toRightOf="@+id/s4"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.306" />

    <Button
        android:id="@+id/s6"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="40dp"
        android:text="7"
        android:textColor="@color/maroon"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@+id/s3"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintLeft_toRightOf="@+id/s2"
        android:layout_marginLeft="8dp" />

    <Button
        android:id="@+id/s7"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="8"
        android:textColor="@color/maroon"
        android:textSize="12sp"
        app:layout_constraintLeft_toRightOf="@+id/s6"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/s4" />

    <Button
        android:id="@+id/s8"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="9"
        android:textColor="@color/maroon"
        android:textSize="12sp"
        app:layout_constraintLeft_toRightOf="@+id/s7"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/s5" />

    <TextView
        android:id="@+id/skillDetails"
        android:layout_width="300dp"
        android:layout_height="400dp"
        android:text=""
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:background="@color/gray"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="0.489"
        app:layout_constraintLeft_toRightOf="@+id/s5" />

    <Button
        android:id="@+id/unlockSkill"
        android:layout_width="180sp"
        android:layout_height="50sp"
        android:textColor="@color/maroon"
        android:background="@color/olive"
        android:textSize="20dp"
        android:text="unlock skill"
        app:layout_constraintBottom_toBottomOf="@+id/skillDetails"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/skillDetails"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/skillDetails"
        app:layout_constraintTop_toTopOf="@+id/skillDetails"
        android:layout_marginTop="8dp"
        app:layout_constraintVertical_bias="1.0" />
</android.support.constraint.ConstraintLayout>
