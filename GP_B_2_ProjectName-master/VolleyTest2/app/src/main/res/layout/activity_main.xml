<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mlscholl.volleytest.MainActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp"
    android:orientation="vertical">

    <Button
        android:id="@+id/LoginRequest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:text="Login" />

    <Button
        android:id="@+id/StringRequest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:text="String Request"
        tools:layout_editor_absoluteX="92dp"
        tools:layout_editor_absoluteY="34dp" />

    <Button
        android:id="@+id/JSONRequest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:text="JSON Request"
        tools:layout_editor_absoluteX="92dp"
        tools:layout_editor_absoluteY="134dp" />

    <Button
        android:id="@+id/ImageRequest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:text="Image Request"
        tools:layout_editor_absoluteX="92dp"
        tools:layout_editor_absoluteY="234dp" />

</LinearLayout>

